<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheets/stars.css">


<div class="mt-3 container row m-auto">
    <div class="col-sm-9">
        <div id="campgroundCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% campground.images.forEach((img, i) => { %> 
                <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                    <img src="<%= img.url %> " class="d-block w-100" alt="">
                </div>
                <% }) %>
            </div>
            <% if(campground.images.length > 1) { %> 
            <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %> 
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title"><%= campground.title %> </h4>
                        <p class="test-muted"><%= campground.location %></p>
                        <p class="float-right starability-result" data-rating="<%= Math.round(campground.ratingAvg) %>">
                            Rated: <%= Math.round(campground.ratingAvg) %>  stars
                        </p>
                    </div>
                    <div>
                        <h5>$<%= campground.price %>/night</h5>
                    </div>
                </div>                
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= campground.description %></li>
                <li class="list-group-item">Submitted by <%= campground.author.username %></li>
            </ul>
            <% if( currentUser && campground.author.equals(currentUser._id)) { %>
            <div class="card-footer">
                <a class=" btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
            <% } %> 
        </div>
    </div>
    <div class="col-sm-3">
        <div id='map'></div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-map-marker-alt"></i> <%= campground.location %> </h5>
            </div>
        </div>
        
    </div>
    <div class="col-sm-9">
        <% if(currentUser) { %> 
            <h2>Leave a Review</h2>
            <form class="mb-3 validated-form" action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate>
                <div>
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-info">Submit</button>
            </form>
            <% } %> 
            <% for(let review of campground.reviews) { %>
            <div class="card">
                <div class="row">
                    <div class="col-sm-11">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-user text-muted"></i> <%= review.author.username %></h5>
                            <p class="float-right starability-result" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %>  stars
                            </p>
                            <p class="card-text">Review: <%= review.body %></p>
                            <small class="text-muted"><%= moment(review.time).fromNow() %></small>   
                        </div>
                    </div>
                    <div class="mb-1 col-sm-1">
                        <% if( currentUser && review.author.equals(currentUser._id)) { %>
                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-lg btn-light delete"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        <% } %>
                    </div>
                </div>
                
            </div>
            
            
            <% } %>
    </div>
</div>


<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campground = <%- JSON.stringify(campground) %>;
</script>

<script src="/javascripts/showPageMap.js"></script>