<% layout('layouts/boilerplate') %> 

<div class="container d-flex-row justify-content-center align-item-center mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-6  col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img style="width: 100%; height: 14vw; object-fit: cover" src="https://images.unsplash.com/photo-1496545672447-f699b503d270?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1171&q=80" alt="" class="card-img-top">
                <div class="card-body  ms-2 me-2">
                    <h4 class="card-title  mb-4 mt-2 fw-light">Register</h4>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="text" id="username" name="username" placeholder="username" required>
                            <label class="floating-input text-muted fw-lighter" for="username">Username</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="email" id="email" name="email" placeholder="name@example.com" required>
                            <label class="floating-input text-muted fw-lighter" for="email">Email</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="password" id="password" name="password" placeholder="password" required>
                            <label class="floating-input text-muted fw-lighter" for="password">Password</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <button class="btn btn-dark btn-lg fw-light">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

